    "def n_gram(words, n):\n",
    "    a = []\n",
    "    for i in range(len(words)- n + 1): #n-gramでは出力データの数が, (入力データ数) - n + 1となる\n",
    "        a.append(words[i:i+n]) #開始位置iからn文字取り出す\n",
    "    return a\n",
    "    \n",
    "str = \"I am an NLPer\"\n",
    "print(n_gram(str, 2)) #文字bi-gramの作成\n",
    "print(n_gram(str.split(), 2)) #単語bi-gramの作成\n",
    "\n"
   ]
